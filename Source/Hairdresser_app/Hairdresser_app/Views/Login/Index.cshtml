@model Hairdresser_app.Models.Users
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3 my-3 text-white">
    <div class="form-style">
        @using (Html.BeginForm("ValidateLogin", "Login", FormMethod.Post))
        {
            <div class="form-title">
                Login
            </div>
            <button onclick="location.href='@Url.Action("Index", "Register")'; return false;" class="change-site-button">
                Register
            </button>
            <br />





            <div class="form-group">
                @Html.LabelFor(model => model.User_Name, new { @class = "form-labels" })
                @Html.EditorFor(model => model.User_Name, new { htmlAttributes = new { @class = "form-inputs", placeholder = Html.DisplayNameFor(model => model.User_Name) } })
                <span class="error-message">
                    @Html.ValidationMessageFor(model => model.User_Name)
                </span>
                <br />
                <br />

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.User_Password, new { @class = "form-labels" })
                @Html.EditorFor(model => model.User_Password, new { htmlAttributes = new { @class = "form-inputs", placeholder = Html.DisplayNameFor(model => model.User_Password) } })
                <span class="error-message">
                    @Html.ValidationMessageFor(model => model.User_Password)
                </span>
                <br />
                <br />
            </div>
            <span class="error-message" id="error2">
                @Html.DisplayFor(model => model.User_Name_Errormessage)
            </span>
            <br />
            <input type="submit" name="name" value="Login" class="validate-button" />



        }
    </div>

    </div>

